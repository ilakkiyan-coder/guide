def ytba():
    ytb = '''
We hate to keep you waiting but unfortunately it looks like its gonna be a while for this feature to be added untill then enjoy the first 4 feautures '''
    for yt in ytb:
        time.sleep(0.08)
        print(yt, end='')
    dots()
    quit()

#E X I T 
def Exit():
    ex = "Initiating exiting protocal "
    for e in ex :
        time.sleep(0.08)
        print(e,end='')
    time.sleep(3)
    quit()
