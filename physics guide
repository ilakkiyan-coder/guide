def exclemetry():
    for i in range (4):
        time.sleep(0.8)
        print('!',end='')

def dots():
    for i in range (4):
        time.sleep(0.8)
        print('.',end='')

def converting():
    print("Converting",end='')
    dots()

# O P E N I N G . . .
def opening():
    pr = "\nopening"
    op = "..."
    for g in pr:
        time.sleep(0.008)
        print(g, end='')
    dots()


opening()

