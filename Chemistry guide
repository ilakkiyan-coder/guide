#C L E A R I N G   T H E   S C R E E N 
def clear_screen():
    run_again = 'PRESS ENTER TO RUN AGAIN...'
    for r in run_again:
        time.sleep(0.08)
        print(r,end='')
    input()
    subprocess.run('cls', shell=True)
    


#E X I T 
def Exit():
    ex = "Initiating exiting protocal ..."
    for e in ex :
        time.sleep(0.08)
        print(e,end='')
    print("\n")
    time.sleep(3)
    quit()

