# O P E N I N G . . .

def opening():
    pr = "\nopening"
    for g in pr:
        time.sleep(0.008)
        print(g, end='')
    for v in range(3):
        time.sleep(0.18)
        print(".", end='')
    print("\n")   
    subprocess.run('cls',shell=True) 
middle()
opening()


#C O N V E R T I N G
def converting():
    print("converting",end="")
    for i in range (3):
        time.sleep(0.8)
        print(".",end="")

